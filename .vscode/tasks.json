{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watcher",
		},  {
			"label": "Run tests",
			"type": "shell",
			"command": "node -e 'setInterval( () => { try { require(`./src/js/tests/tests.js`); } catch(error) { console.warn(error); }}, 1000)'"
		}
	]
}